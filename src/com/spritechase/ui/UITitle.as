package com.spritechase.ui{		import flash.display.Sprite;	import flash.display.MovieClip;	import flash.events.Event;		import com.greensock.TweenLite;		public class UITitle extends Sprite	{		public var user_mc:MovieClip;		public var video_mc:MovieClip;		public var map_mc:MovieClip;		public var leader_mc:MovieClip;				private var currentTitle_mc:MovieClip;		private const DURATION:Number = 0.25;				private var hideTweenArgs:Object;		private var restStateArgs:Object;		private var showTweenArgs:Object;		private var initialized:Boolean = false;				public function UITitle()		{			trace('UITitle()');			alpha = 0;		}				private function init():void		{			if(initialized) return;						//$$testme initialize the tween parameters for showing and hiding the titles			restStateArgs = {				x: user_mc.x,				y: user_mc.y,				alpha: 1			};						hideTweenArgs = {				x: user_mc.x - user_mc.width * 1.5,				y: user_mc.y,				alpha: 0			};						showTweenArgs = {				x: user_mc.x + user_mc.width * 1.5,				y: user_mc.y			};						initialized = true;		}				public function update(newTitle:String):void		{			init();						alpha = newTitle == 'idle' ? 0 : 1;						switch(newTitle)			{				case "user":					showTitle(user_mc);					break;								case "video":					showTitle(video_mc);					break;									case "map":					showTitle(map_mc);					break;									case "leader":					showTitle(leader_mc);					break;			}		}				private function showTitle(title_mc:MovieClip):void		{			if(currentTitle_mc)			{				currentTitle_mc.x = restStateArgs.x;				currentTitle_mc.y = restStateArgs.y;				TweenLite.to(currentTitle_mc, DURATION, hideTweenArgs);			}						title_mc.x = showTweenArgs.x;			title_mc.y = showTweenArgs.y;			title_mc.alpha = showTweenArgs.alpha;			TweenLite.to(title_mc, DURATION, restStateArgs);						currentTitle_mc = title_mc;		}	}	}