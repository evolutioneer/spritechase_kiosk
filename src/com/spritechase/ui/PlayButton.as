package com.spritechase.ui{		import flash.display.MovieClip;	import flash.events.MouseEvent;	import com.greensock.TweenLite;		public class PlayButton extends MovieClip	{				public function PlayButton()		{			trace('PlayButton()');			stop();		}				private function onMouseOver(e:MouseEvent):void		{			TweenLite.to(this, 0.2, {alpha: 1});		}				private function onMouseOut(e:MouseEvent):void		{			TweenLite.to(this, 0.2, {alpha: 0.75});		}				override public function set enabled(value:Boolean):void		{						//$$testme update color, event handlers, etc			if(value != super.enabled)			{				super.enabled = value;								if(value)				{					addEventListener(MouseEvent.ROLL_OVER, onMouseOver);					addEventListener(MouseEvent.ROLL_OUT, onMouseOut);					gotoAndStop("enabled");				}								else				{					removeEventListener(MouseEvent.ROLL_OVER, onMouseOver);					removeEventListener(MouseEvent.ROLL_OUT, onMouseOut);					gotoAndStop("disabled");				}			}		}	}}