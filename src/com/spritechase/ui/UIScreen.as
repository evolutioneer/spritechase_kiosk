package com.spritechase.ui{	import flash.display.MovieClip;	import flash.events.Event;		import com.spritechase.core.*;		public class UIScreen extends MovieClip	{		public function UIScreen()		{			trace('UIScreen()');			addEventListener(Event.ADDED_TO_STAGE, onAddedToStage, false, 0, true);		}				private function onAddedToStage(e:Event):void		{			removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			init();		}				protected function init():void		{			//subclasses perform content-specific stage initialization here		}				public function update(data:KioskData):void		{			//subclasses perform content-specific updates here			visible = true;		}				public function idle():void		{			//subclasses perform content-specific idling cleanup here			visible = false;		}				public function blur():void		{			//$$todo fade back into background as other screen becomes dominant			alpha = 0.2;		}				public function focus():void		{			//$$todo become the visually dominant screen			trace('UIScreen.focus().  name: ' + name);			alpha = 1;		}	}	}